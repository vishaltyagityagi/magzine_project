<%if notice%>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th>Magzine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%if @articles.size > 0 %>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= article.user.full_name %></td>
        <td><%= article.magzine.title %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) if current_user.id == article.user.id%></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }  if current_user.id == article.user.id%></td>
      </tr>
    <% else %>
      <tr><td colspan="8"> No Article.</td></tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
