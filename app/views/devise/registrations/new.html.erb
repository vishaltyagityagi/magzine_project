<!-- Wrapper -->
    <div class="wrapper">

      <!-- Topic Header -->
      <div class="topic">
        <div class="container">
          <div class="row">
            <div class="col-sm-4">
              <h3>Create Account</h3>
            </div>
            <div class="col-sm-8">
              <ol class="breadcrumb pull-right hidden-xs">
                
              </ol>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="sign-form">
              <div class="sign-inner">
                <h3 class="first-child">Create New Account</h3>
                <hr>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                	<%= devise_error_messages! %>
                  
                  <div class="form-group">
                    <%= f.text_field :first_name, class: "form-control", autocomplete: "off",  placeholder: "First Name", data: { toggle: "popover", placement: "left", trigger: "focus", content: "Enter a valid first name here." } %>
                  </div>

                  <div class="form-group">
                    <%= f.text_field :last_name, class: "form-control", autocomplete: "off",  placeholder: "Last Name", data: { toggle: "popover", placement: "left", trigger: "focus", content: "Enter a valid last name here." } %>
                  </div>

                  <div class="form-group">
                  	<%= f.email_field :email, class: "form-control", autocomplete: "off",  placeholder: "Email", data: { toggle: "popover", placement: "left", trigger: "focus", content: "Enter a valid email here." } %>
                  </div>
                  

                  <div class="form-group">
                    <%= f.password_field :password, autofocus: true, placeholder: "Password", class: "form-control", data: { toggle: "popover", placement: "left", trigger: "focus", content: "Enter password here." } %>
                  </div>

                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autofocus: true, placeholder: "Password Confirmation", class: "form-control", data: { toggle: "popover", placement: "left", trigger: "focus", content: "Enter password confirmation here." } %>
                  </div>



                  <!-- <div class="checkbox">
                    <label>
                      <input type="checkbox"> I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
                    </label>
                  </div> -->
                  <%= f.submit "Create Account", class: "btn btn-red" %>

                <% end %>

                <!-- <p>Already registered? <a href="<%= new_user_session_path %>">Sign In.</a></p> -->
              </div>
            </div>
          </div>
        </div> <!-- / .row -->      
      </div> <!-- / .container -->

    </div> <!-- / .wrapper